#!/bin/bash

# Easy Algorithm Runner - Single command to run any algorithm
# Usage: ./algo [algorithm_name] or just ./algo for interactive mode

set -e

# Colors for better output
RED='\033[0;31m'
GREEN='\033[0;32m'
BLUE='\033[0;34m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

echo -e "LeanBacktester Terminal Runner"
echo "================================"

# Check if Python 3 is available
if ! command -v python3 &> /dev/null; then
    echo -e "${RED}Python 3 is required but not installed.${NC}"
    exit 1
fi

# Check if we're in the right directory
if [ ! -f "algo_runner.py" ]; then
    echo -e "${RED}Please run this script from the LeanBacktester directory${NC}"
    exit 1
fi

# If no arguments provided, run in interactive mode
if [ $# -eq 0 ]; then
    echo -e "${GREEN}Starting interactive mode...${NC}"
    python3 algo_runner.py
    exit 0
fi

# Handle command line arguments
case "$1" in
    "list"|"ls"|"-l"|"--list")
        echo -e "${GREEN}Listing available algorithms...${NC}"
        python3 algo_runner.py --list
        ;;
    "help"|"-h"|"--help")
        echo "Usage:"
        echo "  ./algo              - Interactive mode (recommended)"
        echo "  ./algo list         - List all available algorithms"
        echo "  ./algo help         - Show this help message"
        echo ""
        echo "The interactive mode will:"
        echo "  1. Show all available algorithms"
        echo "  2. Let you select which one to run"
        echo "  3. Automatically detect required data"
        echo "  4. Download missing data if needed"
        echo "  5. Run the selected algorithm"
        ;;
    *)
        echo -e "${YELLOW}⚠️  Algorithm-specific running not yet implemented.${NC}"
        echo -e "${GREEN}Using interactive mode instead...${NC}"
        python3 algo_runner.py
        ;;
esac